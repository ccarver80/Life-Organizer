generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  rec_id    Int      @id @default(autoincrement())
  username  String   @unique
  password  String
  email     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Recipe {
  rec_id      Int      @id @default(autoincrement())
  recipe_name String
  recipe_url  String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  ingredients Ingredients[]
  steps       RecipeSteps[]
}

model Ingredients {
  rec_id             Int    @id @default(autoincrement())
  ingredients_name   String
  ingredients_amount String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  recipies  Recipe[]
}

model RecipeSteps {
  rec_id           Int    @id @default(autoincrement())
  step_number      Int
  step_description String

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  Recipe       Recipe?  @relation(fields: [recipeRec_id], references: [rec_id])
  recipeRec_id Int?
}
